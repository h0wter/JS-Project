  <li class='gallery__card' data-action='https://image.tmdb.org/t/p/w500{{backdrop_path}}'>
    <div class='movie__body'>
      <img class="gallery__img" src='https://image.tmdb.org/t/p/w500{{poster_path}}'
      alt='{{original_title}}'
      class='movie-image'
      data-action={{id}}
      />
    </div>
    <div class='gallery__thumb'>
      <h3 class='gallery__name'>{{original_title}}</h3>
      <ul class="movie-card-list gallery__description">
        <li class="movie-card-item">
          <p class='movie-id'>{{genre_ids}}</p>
        <li class="movie-card-item">
          <p class='movie-release-date'>&nbsp;| {{release_date}}</p>
        </li>
      </ul>
    </div>
  </li>