  <li class='gallery__card' data-action='https://image.tmdb.org/t/p/w500{{backdrop_path}}'>
    <div class='movie__body'>
      <img class="gallery__img" src={{img}}
      alt='{{original_title}}'
      class='movie-image'
      data-action={{id}}
      />
    </div>
    <div class='gallery__thumb'>
      <h3 class='gallery__name'>&nbsp;{{original_title}}</h3>
      <p class='movie-id gallery__description'>&nbsp;{{genreNames}}{{#if showDivider}}&nbsp;|&nbsp;{{/if}}{{shortDate}}</p>
    </div>
  </li>
